<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1.0">

                <ImageView
                    android:id="@+id/book_image"
                    android:layout_width="0dp"
                    android:layout_height="216dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/dummy" />

                <Button
                    android:id="@+id/image_upload_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:text="Upload Image"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book Title"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/appBaseColor"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/book_title_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the book's title here."
                    android:background="@android:color/transparent"
                    android:textSize="18sp"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/appBaseColor"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/autor_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the author of the book here."
                    android:background="@android:color/transparent"
                    android:textSize="18sp"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/appBaseColor"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/description_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the book's description here."
                    android:background="@android:color/transparent"
                    android:textSize="18sp"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/appBaseColor"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/review_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your review of the book here."
                    android:background="@android:color/transparent"
                    android:textSize="18sp"
                    android:padding="5dp" />

            </LinearLayout>

            <Button
                android:id="@+id/save_button"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="Save this book"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>